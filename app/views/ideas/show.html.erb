<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @idea.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @idea.description %>
</p>

<p>
  <strong>Picture:</strong>
  <%= image_tag(@idea.picture_url, width: "100%") if @idea.picture.present? %>
</p>

<h3>Comments</h3>
<% @comments.each do |comment| %>
  <div class="container-fluid">
    <div class="row" style="border-bottom:1px solid #eeeeee;">
      <div class="col-sm-2"><strong><%= comment.user_name %></strong></div>
      <div class="col-sm-8"><p><%= simple_format(comment.body)  %></p></div>
      <div class="col-sm-2"><p><%= link_to 'Delete', comment_path(comment), method: :delete, data: { confirm: '削除してもよろしいですか？' } %></p></div>
    </div>
  </div>
<% end %>
<%= render 'comments/form', comment: @comment %>

<%= link_to 'Edit', edit_idea_path(@idea) %> |
<%= link_to 'Back', ideas_path %>
